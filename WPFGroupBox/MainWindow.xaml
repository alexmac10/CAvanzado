<Window x:Class="WPFGroupBox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFGroupBox"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <GroupBox Header="Migrupo de controles" Margin="30" Padding="50">
            <StackPanel>
                <Button Content="Un boton" Margin="10,20"/>
                <TextBlock Text="Mi texto" Margin="10,0,10,20"/>
                <TextBox Text="dato" Margin="10,0,10,20"/>
                <Button Content="Otro boton" Margin="10,0,10,20"/>
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>
